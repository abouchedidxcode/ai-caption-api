{
  "name": "ai-caption-api",
  "version": "1.0.0",
  "description": "Production-ready Vercel serverless API for AI-powered image caption generation",
  "main": "api/generateCaption.js",
  "scripts": {
    "dev": "vercel dev",
    "build": "vercel build",
    "deploy": "vercel --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint api/**/*.js",
    "lint:fix": "eslint api/**/*.js --fix",
    "format": "prettier --write api/**/*.js",
    "start": "vercel dev",
    "validate": "npm run lint && npm run test"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "vercel": "^33.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ai-caption-api.git"
  },
  "keywords": [
    "ai",
    "image-captioning",
    "openai",
    "gpt-4-vision",
    "vercel",
    "serverless",
    "api",
    "ios",
    "swift",
    "computer-vision"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/ai-caption-api/issues"
  },
  "homepage": "https://github.com/yourusername/ai-caption-api#readme",
  "vercel": {
    "functions": {
      "api/generateCaption.js": {
        "maxDuration": 30
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
} 